BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
        Button:
            text: 'Up'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Button:
            text: 'Down'
            color: (2, 0, 1, 2)
            on_press: app.handle_calculate(input_number.text)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_calculate(input_number.text)
    Label:
    id: output_label
        text: 'Enter a number and press ""Square""'

