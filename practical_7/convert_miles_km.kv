BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 38
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                font_size: 38
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        text: 'Convert miles to km'
        font_size: 58
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(input_number.text)
    Label:
        font_size: 58
        id: output_number
        color: (1,1,0,1)

